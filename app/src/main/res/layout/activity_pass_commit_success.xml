<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/LLayStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.ww.android.governmentheart.widget.TitleView
        android:id="@+id/title_view"
        style="@style/TitleBar"
        android:background="@color/color_white"
        app:titleLeftIco="@mipmap/ic_back"
        app:titleText="提交成功"
        app:titleTextColor="@color/color_black"/>


    <View style="@style/ViewLineStyle"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="153dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_home_commit_success"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:text="@string/str_pass_reset_success"
            android:textColor="@color/color_blue"
            android:textSize="24sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/length_5"
            android:text="@string/str_use_new_pass_login"
            android:textColor="@color/color_tip_gray"
            android:textSize="@dimen/text_15"/>

        <TextView
            android:text="@string/str_back_login"
            style="@style/ButtonGrayStyle"/>

    </LinearLayout>


</LinearLayout>