<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/LLayStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white">

    <com.ww.android.governmentheart.widget.TitleView
        android:id="@+id/title_view"
        style="@style/TitleBar"
        android:background="@color/color_white"
        app:titleLeftIco="@mipmap/ic_back"
        app:titleText="提交成功"
        app:titleTextColor="@color/color_black"/>

    <View style="@style/ViewLineStyle"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="153dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_commit_success"/>

        <TextView
            style="@style/NormalTitleTextStyle"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="center"
            android:text="提交成功"
            android:textColor="#f53d3c"
            android:textSize="24sp"/>

        <TextView
            style="@style/NormalTipTextStyle"
            android:layout_marginTop="@dimen/margin_5"
            android:text="感谢您的积极参与"
            android:textSize="@dimen/text_15"/>


        <Button
            android:id="@+id/btn_back"
            android:layout_width="175dp"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_gray_border_round_corner_3"
            android:gravity="center"
            android:text="点击返回"
            android:textColor="#666666"
            android:textSize="@dimen/text_15"/>
    </LinearLayout>


</LinearLayout>