<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LLayStyle">

    <LinearLayout
        android:id="@+id/linear_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_height"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/shape_search_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5_right">

        <ImageView
            android:layout_width="@dimen/normal_width"
            android:layout_height="@dimen/normal_height"
            android:layout_marginRight="@dimen/margin_5_right"
            android:src="@mipmap/ic_search_gray"/>

        <com.ww.android.governmentheart.widget.ClearEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="请输入要搜索的内容"
            app:delIcon="@mipmap/ic_close"
            android:textColorHint="@color/color_hint"
            android:textSize="@dimen/text_15"/>

    </LinearLayout>

</LinearLayout>