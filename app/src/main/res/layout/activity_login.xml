<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:background="@mipmap/ic_bg_login_head"
                    android:gravity="center_horizontal"
                    android:layout_height="90dp">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="35dp"
            android:layout_centerVertical="true"
            android:layout_height="35dp"/>

        <TextView
            android:layout_toRightOf="@id/iv"
            android:layout_width="wrap_content"
            android:textColor="@color/color_white"
            android:layout_marginLeft="@dimen/length_5"
            android:textSize="@dimen/text_18"
            android:layout_centerVertical="true"
            android:text="@string/str_normal_name"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="25dp"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_18"
            android:textColor="@color/color_black"
            android:text="您好，请登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="第一次登录请输入手机号码后用短信接收密码"
            android:textColor="@color/color_hint"
            android:layout_marginTop="3dp"
            style="@style/NormalTipTextStyle"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_mobile"/>

        <EditText
            android:id="@+id/et_phone"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/iv_phone"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:layout_toLeftOf="@id/tv_gain_pass"
            android:hint="请输入手机号"
            android:textColor="@color/color_black"
            android:textColorHint="@color/color_hint"
            android:textSize="@dimen/text_15"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_gain_pass"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text="接收密码"
            android:textSize="@dimen/text_15"
            android:textColor="@color/color_blue"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <View
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        style="@style/ViewLineStyle"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_pass"
            android:layout_width="19dp"
            android:src="@mipmap/ic_password"
            android:layout_height="20dp"/>

        <EditText
            android:id="@+id/et_pass"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/iv_pass"
            android:layout_toLeftOf="@id/iv_see_pass"
            android:hint="请输入密码"
            android:maxLength="16"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textColorHint="@color/color_hint"
            android:textSize="@dimen/text_15"
            android:layout_height="wrap_content"/>


        
        <ImageView
            android:id="@+id/iv_see_pass"
            android:src="@mipmap/ic_eyes"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_centerInParent="true"
            android:layout_height="16dp"/>
        

    </RelativeLayout>


    <View
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        style="@style/ViewLineStyle"/>


    <Button
        android:layout_margin="@dimen/margin_20"
        android:layout_width="match_parent"
        android:textColor="@color/color_white"
        android:text="登录"
        android:textSize="@dimen/text_18"
        android:background="@drawable/shape_red_grandient"
        android:layout_height="45dp"/>

    <TextView style="@style/NormalTitleTextStyle"
              android:textSize="@dimen/text_15"
              android:gravity="center"
              android:textColor="@color/color_hint"
        android:text="点击“登录”即代表您同意服务条款"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/margin_20"
        android:gravity="center_horizontal|bottom"
        android:layout_height="match_parent">
        <TextView
            style="@style/NormalTipTextStyle"
            android:textColor="@color/color_hint"
            android:text="心联汇v1.0.0"/>
    </LinearLayout>


</LinearLayout>