<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@mipmap/ic_bg_login_head"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/length_5"
            android:layout_toRightOf="@id/iv"
            android:text="@string/str_normal_name"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_18"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您好，请登录"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_18"/>

        <TextView
            style="@style/NormalTipTextStyle"
            android:layout_marginTop="3dp"
            android:text="第一次登录请输入手机号码后用短信接收密码"
            android:textColor="@color/color_hint"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_login_mobile"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_gain_pass"
            android:layout_toRightOf="@id/iv_phone"
            android:background="@android:color/transparent"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textColorHint="@color/color_hint"
            android:textSize="@dimen/text_15"/>


        <TextView
            android:id="@+id/tv_gain_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="接收密码"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/text_15"/>

    </RelativeLayout>


    <View
        style="@style/ViewLineStyle"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:id="@+id/iv_pass"
            android:layout_width="19dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_password"/>

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_see_pass"
            android:layout_toRightOf="@id/iv_pass"
            android:background="@android:color/transparent"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textColorHint="@color/color_hint"
            android:textSize="@dimen/text_15"/>


        <ImageView
            android:id="@+id/iv_see_pass"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_eyes"/>


    </RelativeLayout>


    <View
        style="@style/ViewLineStyle"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="@dimen/margin_20"
        android:background="@drawable/shape_red_grandient"
        android:text="登录"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_18"/>

    <TextView
        style="@style/NormalTitleTextStyle"
        android:gravity="center"
        android:text="点击“登录”即代表您同意服务条款"
        android:textColor="@color/color_hint"
        android:textSize="@dimen/text_15"/>


    <TextView
        android:id="@+id/tv_forget_pass"
        style="@style/NormalTitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/length_10"
        android:drawableLeft="@mipmap/ic_any_question"
        android:drawablePadding="@dimen/margin_5"
        android:text="忘记密码"
        android:textColor="@color/color_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="@dimen/margin_20">

        <TextView
            style="@style/NormalTipTextStyle"
            android:text="心联汇v1.0.0"
            android:textColor="@color/color_hint"/>
    </LinearLayout>


</LinearLayout>