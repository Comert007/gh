<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margins"
    android:background="@color/color_white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="1dp"
            android:layout_height="28dp"
            android:background="@color/color_e9e9e9"/>

        <View android:layout_width="@dimen/length_10"
              android:layout_height="@dimen/length_10"
              android:background="@drawable/shape_gray_circle"
        />

        <View
            android:layout_width="1dp"
            android:layout_height="152dp"
            android:background="@color/color_e9e9e9"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingTop="23dp"
                  android:paddingRight="@dimen/margins">

        <TextView
            android:id="@+id/tv_title"
            style="@style/NormalTitleTextStyle"
            android:paddingLeft="@dimen/margin_20"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingLeft="@dimen/margin_20"
                      android:layout_marginBottom="@dimen/margin_5"
                      android:layout_marginTop="@dimen/margin_5">

            <TextView
                android:id="@+id/tv_time"
                style="@style/NormalTipTextStyle"
                      android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_deal_sign"
                style="@style/NormalProcessStyle"
                android:text=""/>


        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:paddingLeft="@dimen/margin_20"
                      android:layout_height="wrap_content">

            <TextView
                style="@style/NormalTipTextStyle"
                android:textColor="#666666"
                android:text="经办人员： "/>

            <TextView
                android:id="@+id/tv_username"
                style="@style/NormalTipTextStyle"
                android:textColor="@color/color_black"/>

        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:paddingLeft="@dimen/margin_20"
                      android:layout_marginTop="@dimen/margin_10"
                      android:layout_height="wrap_content">

            <TextView
                style="@style/NormalTipTextStyle"
                android:textColor="#666666"
                android:text="处理时间： "/>

            <TextView
                android:id="@+id/tv_deal_time"
                style="@style/NormalTipTextStyle"
                android:textColor="@color/color_black"/>

        </LinearLayout>

        <View
            android:id="@+id/vi_line"
            android:layout_marginTop="@dimen/margins"
            style="@style/ViewSplitStyle"/>


        <LinearLayout
            android:id="@+id/container_detail"
            android:layout_width="match_parent"
                      android:gravity="center_vertical"
                      android:paddingLeft="@dimen/margin_20"
                      android:paddingTop="@dimen/margin_12"
                      android:paddingBottom="@dimen/margin_12"
                      android:layout_height="wrap_content">

            <ImageView android:layout_width="@dimen/length_16"
                       android:src="@mipmap/ic_eyes"
                       android:layout_height="@dimen/length_10"/>

            <TextView
                android:id="@+id/tv_view_num"
                android:text="0"
                android:layout_marginLeft="@dimen/margin_5"
                style="@style/NormalTipTextStyle"/>

            <ImageView android:layout_width="@dimen/length_12"
                       android:layout_marginLeft="@dimen/margin_20"
                       android:src="@mipmap/ic_comment"
                       android:layout_height="@dimen/length_10"/>

            <TextView
                android:id="@+id/tv_comment_num"
                android:text="0"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin_5"
                style="@style/NormalTipTextStyle"/>

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:text="查看详情"
                android:layout_toLeftOf="@id/iv_more"
                android:textSize="@dimen/text_15"
                android:textColor="@color/color_blue"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_more"
                android:src="@mipmap/ic_right_gray"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/length_15"
                android:layout_height="@dimen/length_15"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>