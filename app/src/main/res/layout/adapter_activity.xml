<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/length_15"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@mipmap/ic_pic_default"/>


    <TextView
        android:id="@+id/tv_title"
        style="@style/NormalTitleTextStyle"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="崇州市各市委部门联谊活动"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_time_delay"
            style="@style/NormalTipTextStyle"
            android:text="还有 7 天开始"
            android:textColor="@color/color_start_titleBar"/>

        <TextView
            android:id="@+id/tv_join"
            android:layout_weight="1"
            android:text="报名"
            android:gravity="right"
            android:textColor="@color/color_blue"
            style="@style/NormalTipTextStyle"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="10dp"
            android:src="@mipmap/ic_time"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_marginLeft="@dimen/margin_5"
            android:text="时 间：2018-08-18 9:00"
           style="@style/NormalTipTextStyle"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="10dp"
            android:src="@mipmap/ic_location"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/tv_origin_name"
            android:layout_marginLeft="@dimen/margin_5"
            android:text="主办方：崇州市委"
            style="@style/NormalTipTextStyle"/>

    </LinearLayout>


</LinearLayout>