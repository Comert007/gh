<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TitleBar">
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_title</item>
    </style>

    <style name="TitleButtonStyle" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingRight">@dimen/title_margins</item>
        <item name="android:paddingLeft">@dimen/title_margins</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/color_title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:drawablePadding">@dimen/draw_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/color_title</item>
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">200dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="TabLayout">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TabText">
        <item name="android:textColor">@drawable/tab_name_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/table_size</item>
        <item name="android:layout_marginTop">@dimen/table_margins</item>
    </style>
    <style name="TabImage">
        <item name="android:layout_width">@dimen/table_image</item>
        <item name="android:layout_height">@dimen/table_image</item>

    </style>

    <style name="ViewSplitStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_above">@id/tv_merchant</item>
        <item name="android:layout_marginBottom">@dimen/margin_7</item>
        <item name="android:background">@color/color_e9e9e9</item>
    </style>

    <style name="ViewLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_e9e9e9</item>
    </style>

    <style name="ViewLineVerticalStyle">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_e9e9e9</item>
    </style>

    <style name="ViewSplitVerticalStyle">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_e9e9e9</item>
    </style>


    <style name="NormalTitleTextStyle">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="NormalTipTextStyle">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/color_tip_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="NormalProcessStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_processing_13_rectangle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/color_text_processing</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="LLayStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/color_divider</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="NormalSunTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:paddingLeft">@dimen/margin_15</item>
        <item name="android:paddingTop">@dimen/margin_10</item>
        <item name="android:paddingBottom">@dimen/margin_10</item>
        <item name="android:textColor">@color/color_tip_gray</item>
        <item name="android:textSize">@dimen/text_15</item>
    </style>
    <style name="PaddingStyle">
        <item name="android:paddingLeft">@dimen/margin_15</item>
        <item name="android:paddingRight">@dimen/margin_15</item>
        <item name="android:paddingTop">@dimen/margin_10</item>
        <item name="android:paddingBottom">@dimen/margin_10</item>
    </style>

</resources>
