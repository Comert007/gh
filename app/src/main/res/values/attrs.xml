<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitleView">
        <attr name="titleLeftIco" format="reference" />
        <attr name="titleLeftText" format="reference|string" />
        <attr name="titleRightIco" format="reference" />
        <attr name="titleRightText" format="reference|string" />
        <attr name="titleText" format="reference|string" />
        <attr name="titleTextColor" format="color"/>
        <attr name="titleRightTextColor" format="color"/>
        <attr name="titleLeftTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ClearEditText">
        <attr name="delIcon" format="reference" />
        <attr name="delIconWidth" format="dimension" />
        <attr name="delIconHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FluidLayout">
        <attr name="gravity" >
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="center" value="0x11" />
        </attr>
    </declare-styleable>

    <declare-styleable name="FluidLayout_Layout">
        <attr name="layout_gravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="center" value="0x11" />
        </attr>
    </declare-styleable>
</resources>